<%= stylesheet_link_tag 'global' %>
<h1>Übersicht der Leihwagen - SMP Automobilhandel AG Saarbrücken</h1>

<table border="1">
  <thead>
    <tr>
      <th>Amtl. Kennzeichen</th>
      <th>Erstzulassung</th>
      <th>Kraftstoffart</th>
      <th>Marke</th>
      <th>Modell</th>
      <th>Kommentar</th>
      <th>Bekannte Defekte / Beschädigungen</th>
      <th>Raucher ?</th>
      <th>Status des Leihwagen</th>
      <th>Technik-Check</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @hirecars.each do |hirecar| %>
      <tr>
        <td><%= hirecar.badge %></td>
        <% unless hirecar.regestration_date.nil? %>
        	<td><%= hirecar.regestration_date.strftime("%d.%m.%Y") %></td>
        <%else%>
        	<td></td>
        <% end %>
        <td><%= hirecar.fuel %></td>
        <td><%= hirecar.brand %></td>
        <td><%= hirecar.model %></td>
        <td><%= hirecar.comment %></td>
        <td><%= hirecar.defect %></td>
        <td><%= hirecar.smoking %></td>
        <td><%= hirecar.stati_id %></td>
        <% unless hirecar.tech_check.nil? %>
        	<td><%= hirecar.tech_check.strftime("%d.%m.%Y") %></td>
    	<% else %>
    		<td></td>
    	<% end %>
        <td><%= link_to 'Leihwagen anzeigen', hirecar %></td>
        <td><%= link_to 'Leihwagen bearbeiten', edit_hirecar_path(hirecar) %></td>
        <td><%= link_to 'Leihwagen löschen', hirecar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Neuen Leihwagen erfassen', new_hirecar_path %>
