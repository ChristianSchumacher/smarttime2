<%= stylesheet_link_tag 'global' %>
<%= form_for(@navitem) do |f| %>
  <% if @navitem.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@navitem.errors.count, "error") %> prohibited this navitem from being saved:</h2>

      <ul>
      <% @navitem.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Name' %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :url, 'URL' %><br>
    <%= f.text_field :url, :title => "Nur den Ressourcennamen eingeben, nicht den gesamten Pfad!" %>
  </div>
  <div class="field">
    <%= f.label :rang, 'Rang' %><br>
    <%= f.number_field :rang%>
  </div>
  <div class="actions">
    <%= f.submit 'Neues NavItem anlegen' %>
  </div>
<% end %>
