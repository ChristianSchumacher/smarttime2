<h1>Auftragserfassung - SMP Automobilhandel AG Saarbrücken</h1>
<%= render  'available' %>
<table>
  <thead>
    <tr>
      <th>Termin</th>
      <th>Beginn</th>
      <th>Ende</th>
      <th>Zuständiger Mitarbeiter</th>
      <th>Arbeiten</th>
      <th>Benötigte Zeit</th>
      <th>Kunde</th>
      <th>Leihwagen benötigt?</th>
      <th>Direktannahme gewünscht?</th>
      <th>Kundendienstmaßnahme erfolgreich?</th>
      <th>Datenschutzerklärung akzeptiert?</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.appointment_date %></td>
        <td><%= activity.start_time %></td>
        <td><%= activity.end_time %></td>
        <td><%= activity.allocated_at %></td>
        <td><%= activity.work_id %></td>
        <td><%= activity.activity_time %></td>
        <td><%= activity.customer_id %></td>
        <td><%= activity.hire_car_id %></td>
        <td><%= activity.direct_contact %></td>
        <td><%= activity.customer_service_agreement %></td>
        <td><%= activity.data_privacy_statement %></td>
        <td><%= link_to 'Auftrag anzeigen', activity %></td>
        <td><%= link_to 'Auftrag bearbeiten', edit_activity_path(activity) %></td>
        <td><%= link_to 'Auftrag löschen', activity, method: :delete, data: { confirm: 'Auftrag wirklich löschen?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Neuen Auftrag erfassen', new_activity_path %>
