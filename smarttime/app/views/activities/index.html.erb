<h1>Listing activities</h1>

<table>
  <thead>
    <tr>
      <th>Appointment date</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Allocated at</th>
      <th>Work</th>
      <th>Activity time</th>
      <th>Customer</th>
      <th>Hire car</th>
      <th>Direct contact</th>
      <th>Customer service agreement</th>
      <th>Data privacy statement</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.appointment_date %></td>
        <td><%= activity.start_time %></td>
        <td><%= activity.end_time %></td>
        <td><%= activity.allocated_at %></td>
        <td><%= activity.work_id %></td>
        <td><%= activity.activity_time %></td>
        <td><%= activity.customer_id %></td>
        <td><%= activity.hire_car_id %></td>
        <td><%= activity.direct_contact %></td>
        <td><%= activity.customer_service_agreement %></td>
        <td><%= activity.data_privacy_statement %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

